<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <TextView
        android:id="@+id/gesture_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:textSize="20sp"
        android:text="Modify your planet with the sliders at the bottom, or modify it with these gestures:"/>



        <ImageView
            android:id="@+id/wrap_help_imageview"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/help_gestures_warp_500px"
            android:layout_below="@id/gesture_textview"
            android:layout_alignParentLeft="true"

            />

        <ImageView
            android:id="@+id/rotate_help_imageview"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/help_gestures_rotate_500px"
            android:layout_below="@id/gesture_textview"
            android:layout_alignParentRight="true"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="Warp"
            android:layout_below="@id/wrap_help_imageview"/>




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:text="Rotate"
            android:layout_below="@id/rotate_help_imageview"
            android:layout_alignParentRight="true"

            />
</RelativeLayout>