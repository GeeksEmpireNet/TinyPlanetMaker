<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"

    android:orientation="vertical"


    tools:context=".MainActivityFragment"

    >

    <android.support.design.widget.CoordinatorLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/coordinatorLayout"

        >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:id="@+id/imageView"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_image_black_48dp"
        app:layout_behavior="org.hofapps.tinyplanet.ImageViewBehavior"
        />



    <fragment
        android:name="org.hofapps.tinyplanet.SettingsFragment"
        android:id="@+id/settings_fragment"

        tools:layout="@layout/fragment_settings"
        android:background="#000000"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"

        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:layout_behavior="org.hofapps.tinyplanet.FloatingActionButtonBehavior"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gestures modify"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <RadioGroup
            android:id="@+id/modeRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:onClick="onRadioButtonClicked"
            >
            <RadioButton android:id="@+id/viewModeRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View"
                android:onClick="onRadioButtonClicked"/>

            <RadioButton android:id="@+id/editModeRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Planet"
                android:onClick="onRadioButtonClicked"/>

        </RadioGroup>
        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:scaleType="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_close_black_24dp"
            android:layout_centerInParent="true"


            />




    </RelativeLayout>




    </android.support.design.widget.CoordinatorLayout>

</LinearLayout>

